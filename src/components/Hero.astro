---
import ASSETS from "@/assets";
import { URLS, USERNAMES } from "@/constants";
---

<section class="my-8 flex flex-col justify-between gap-6 md:my-12">
  <div class="flex flex-col gap-2">
    <h1 class="font-comic-neue text-primary text-4xl font-bold md:text-5xl">
      jass
    </h1>
    <h2 class="text-lg font-bold md:text-xl">terminally online developer</h2>
  </div>
  <div class="flex flex-col gap-2">
    <p class="text-sm md:text-base">
      fullstack web/app dev. i love building seamless experiences & strongly
      advocate for UDD (user-driven development) over anything else.
    </p>
    <p class="text-sm md:text-base">
      im into bleeding edge tech. i know not to chase the shiny thing tho.
      <br /> i also think low-level systems & dev tools are cool. workin' on myself
      to work on 'em.
      <br /> when im not coding, im probably getting lost in a good game world or
      the real one.
    </p>
  </div>
  <div class="grid grid-cols-2 gap-4 md:flex md:items-center md:gap-8">
    <a href={URLS.RESUME} target="_blank">
      <div class="flex items-center gap-2">
        <img
          {...ASSETS.ICONS.RESUME}
          alt="résumé"
          class="h-5 w-5 md:h-6 md:w-6"
        />
        <p class="text-sm md:text-base">résumé</p>
      </div>
    </a>
    <a href={URLS.TWITTER} target="_blank">
      <div class="flex items-center gap-2">
        <img
          {...ASSETS.ICONS.TWITTER}
          alt="twitter"
          class="h-5 w-5 md:h-6 md:w-6"
        />
        <p class="text-sm md:text-base">twitter</p>
      </div>
    </a>
    <a href={URLS.GITHUB} target="_blank">
      <div class="flex items-center gap-2">
        <img
          {...ASSETS.ICONS.GITHUB}
          alt="github"
          class="h-5 w-5 md:h-6 md:w-6"
        />
        <p class="text-sm md:text-base">github</p>
      </div>
    </a>
    <a href={URLS.DISCORD} target="_blank">
      <div class="flex items-center gap-2">
        <img
          {...ASSETS.ICONS.DISCORD}
          alt="discord"
          class="h-5 w-5 md:h-6 md:w-6"
        />
        <p class="text-sm md:text-base">discord</p>
      </div>
    </a>
    <a href={URLS.LINKEDIN} target="_blank">
      <div class="flex items-center gap-2">
        <img
          {...ASSETS.ICONS.LINKEDIN}
          alt="linkedin"
          class="h-5 w-5 md:h-6 md:w-6"
        />
        <p class="text-sm md:text-base">linkedin</p>
      </div>
    </a>
    <a href={URLS.EMAIL} target="_blank">
      <div class="flex items-center gap-2">
        <img {...ASSETS.ICONS.MAIL} alt="email" class="h-5 w-5 md:h-6 md:w-6" />
        <p class="text-sm md:text-base">email</p>
      </div>
    </a>
  </div>
</section>

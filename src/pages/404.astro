---
import { Layout } from "@/layouts";
---

<Layout>
  <!-- Full-screen video background -->
  <video
    src="https://media.tenor.com/pEO-GYmrOykAAAPs/anime-lost.webm"
    autoplay
    loop
    muted
    playsinline
    class="fixed inset-0 z-0 h-full w-full object-cover"></video>

  <!-- Dark overlay for better text readability -->
  <div class="bg-background/40 fixed inset-0 z-10"></div>

  <!-- Main content - 404 centered -->
  <main
    class="relative z-30 flex items-center justify-center"
    style="height: calc(100vh - 12rem);">
    <div class="text-center">
      <h1
        class="font-comic-neue text-primary text-9xl font-bold drop-shadow-lg">
        404
      </h1>
      <h2 class="text-foreground mt-4 text-xl font-bold drop-shadow-md">
        page not found
      </h2>
      <p class="text-muted-foreground mt-2 drop-shadow-sm">
        looks like you're lost in the void
      </p>
      <a
        href="/"
        class="bg-primary/20 text-primary hover:bg-primary/30 hover:text-primary-foreground border-primary/30 mt-6 inline-flex items-center gap-2 rounded-lg border px-6 py-3 font-medium backdrop-blur-sm transition-all">
        go home
      </a>
    </div>
  </main>
</Layout>
